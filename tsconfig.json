{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "allowUmdGlobalAccess": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/vnext/*": ["./src/vnext/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "strict": false,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "prisma/seed.ts", "scripts/**/*.ts"]
}
