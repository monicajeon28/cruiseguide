{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false, // Set to false to emit output files
    "module": "CommonJS", // Compile to CommonJS
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": ".", // Root directory for source files
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["app/*"],
      "@lib/*": ["lib/*"],
      "@data/*": ["public/data/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
